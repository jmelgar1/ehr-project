{
	"info": {
		"_postman_id": "auth-service-collection",
		"name": "Auth Service",
		"description": "EHR Auth Service API â€” Register and Login endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8084",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "Register User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"role\": \"THERAPIST\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/register",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "register"]
				}
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    pm.collectionVariables.set(\"auth_token\", jsonData.token);",
							"    pm.test(\"Registration successful\", function () {",
							"        pm.expect(jsonData.token).to.be.a(\"string\");",
							"        pm.expect(jsonData.username).to.eql(\"testuser\");",
							"        pm.expect(jsonData.role).to.eql(\"THERAPIST\");",
							"    });",
							"}"
						]
					}
				}
			]
		},
		{
			"name": "Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/login",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "login"]
				}
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    pm.collectionVariables.set(\"auth_token\", jsonData.token);",
							"    pm.test(\"Login successful\", function () {",
							"        pm.expect(jsonData.token).to.be.a(\"string\");",
							"        pm.expect(jsonData.username).to.eql(\"testuser\");",
							"    });",
							"}"
						]
					}
				}
			]
		},
		{
			"name": "Login - Bad Credentials",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"wrongpassword\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/login",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "login"]
				}
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Returns 401 Unauthorized\", function () {",
							"    pm.response.to.have.status(401);",
							"});"
						]
					}
				}
			]
		}
	]
}
